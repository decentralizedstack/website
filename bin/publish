#!/usr/bin/env coffee

ghpages = require 'gh-pages'
path = require 'path'

handle_error = (error) ->
  if error
    console.error error
    process.exit error.code or 1

dist = path.join __dirname, '..', 'dist'

options =
  logger: console.log
  dotfiles: true
  user:
    name: 'Deploy Bot',
    email: 'deploy+bot@dstack.org'

ghpages.publish dist, options, handle_error
