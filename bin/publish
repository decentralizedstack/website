#!/usr/bin/env coffee

ghpages = require 'gh-pages'
path = require 'path'

handle_error = (error) ->
  if error
    console.log error
    console.log "~"
    throw new Error error.toString()

dist = path.join __dirname, '..', 'dist'

options =
  dotfiles: true

ghpages.publish dist, options, handle_error
